@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
       
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Reservation
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
             <tr>
                 <td width="40%">
                     @obj.Title
                 </td>
                 <td width="30%">
                     @obj.IsReserved
                 </td width="30%">
                 <td>
                     <div class="col-6 text-end">
                         <a asp-controller="Book" asp-action="Reserve" class="btn btn-outline-primary btn-sm">
                             Reserve
                         </a>
                     </div>
                 </td>
             </tr>
        }
    </tbody>
</table> 
